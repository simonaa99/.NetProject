@model CaseStudyTakmicenje.Models.TimViewModel

@{
    ViewData["Title"] = "Kreiraj tim";
}

<h1>Kreiraj novi tim</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NazivTima" class="control-label"></label>
                <input asp-for="NazivTima" class="form-control" />
                <span asp-validation-for="NazivTima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FakultetId" class="control-label">Fakultet</label>
                <select asp-for="FakultetId" asp-items="Model.Fakulteti" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Kreiraj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vrati se na listu timova</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
