@using Domain
@model List<Takmicenje>

<p><a href="Takmicenje/Create">Kreiraj novo takmicenje sa statistikom</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Tema</th>
            <th>Datum održavanja</th>
            <th>Vidi statistiku</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Takmicenje item in Model)
        {
<tr>
    <td>@item.Tema</td>
    <td>@item.DatumOdrzavanja.Date.GetDateTimeFormats()[3]</td>
    <td><a href="Takmicenje/Details/@item.TakmicenjeId">Statistika</a></td>
</tr>
}


    </tbody>

</table>
